{#{{ dump() }}#}
{% set classes = [
    base,
    "width--#{block.align}",
] %}

<section class="{{ classes|join(' ')|e }}">
    <div class="{{ base }}__inner container">
        <div class="{{ base }}__content">
            {% if heading %}
                <h2 class="{{ base }}__heading">{{ __(heading|e, 'view') }}</h2>
            {% endif %}
            {% if subheading %}
                <h3 class="{{ base }}__subheading">{{ __(subheading|e, 'view') }}</h3>
            {% endif %}

            {% include 'Components/Button/Button.twig' with {
                title: link.title,
                link: link.url,
            } only %}
        </div>
    </div>
</section>
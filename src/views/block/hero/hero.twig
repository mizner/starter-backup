{#
/**
 * @file
 * Hero Block
 *
 * Available variables:
 * - heading: The title for this region.
 * - content: The description for this region.
 * - link: The link for this region.
 * - type: The type for this region to determine media asset shown.
 * - image: The image for this region.
 * - video: The video for this region.
 *
 * @see _core/models/blocks/hero & _core/filters/blocks/hero
 *
 */
#}
<section class="hero-basic {{ classes }}">
	<div class="container md:flex items-center justify-center">
		<div class="hero-basic__background">
			{% if 'video' == type and video %}
				<video autoplay muted loop title="{{ background_video.alt }}">
					<source src="{{ video.url }}" type="video/mp4">
				</video>
			{% elseif 'image' == type and image %}
				{% include 'component/picture/picture.twig' with image only %}
			{% endif %}
		</div>
		<div class="hero-basic__inner p-5 bg-light">
			<h2 class="hero-basic__heading">{{ heading }}</h2>
			<div class="hero-basic__content">{{ content }}</div>
			{% if link %}
				<a class="btn" href="{{ link.url }}" target="{{ link.target }}">
					<span>{{ link.title }}</span>
				</a>
			{% endif %}
		</div>
	</div>
</section>

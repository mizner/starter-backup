<figure class="{{ classes|join(' ') }}" {{ attributes }}>
    <picture class="lozad" data-iesrc="{{ src }}" data-alt="{{ alt }}" style="display: block; min-height: 1rem">
        <!--[if IE 9]><video style="display: none;"><![endif]-->
        {% for image in sizes %}
            {# <source srcset="images/thumbs/04.jpg" media="(min-width: 1280px)"> #}
            <source media="(min-width: {{ image.width }}px)" srcset="{{ image.url }}">
        {% endfor %}
        <!--[if IE 9]></video><![endif]-->
        <img src="{{ src }}" alt="{{ alt }}">
        <noscript><img data-src="{{ src }}" alt="{{ alt }}"></noscript>
    </picture>
</figure>



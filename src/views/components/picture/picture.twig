{#
    References:
        * https://www.responsivebreakpoints.com
        * https://jakearchibald.com/2015/anatomy-of-responsive-images/
        * https://scottjehl.github.io/picturefill/#ie9
        * https://apoorv.pro/lozad.js/#example-with-picture-tag
#}
<figure class="{{ classes|join(' ') }}" {{ attributes }}>
    <picture class="lozad-picture" data-iesrc="{{ src }}" data-alt="{{ alt }}" style="display: block; min-height: 1rem">
     {# <source srcset="images/thumbs/04.jpg" media="(min-width: 1280px)">
    <source srcset="images/thumbs/05.jpg" media="(min-width: 980px)">
    <source srcset="images/thumbs/06.jpg" media="(min-width: 320px)"> #}
        {% for image in sizes %}
            <source
            media="(min-width: {{ image.width }}px)"
            srcset="{{ image.url }}"
            height="{{ image.height }}"
            width="{{ image.width }}"
            >
        {% endfor %}
        <noscript><img data-src="{{ src }}" alt="{{ alt }}"></noscript>
    </picture>
</figure>